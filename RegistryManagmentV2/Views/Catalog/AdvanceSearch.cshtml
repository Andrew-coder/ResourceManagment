@model RegistryManagmentV2.Models.SearchViewModel

    <div class="container">
        <div class="row">
            <div id="filter-panel" class="collapse filter-panel">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @using (Html.BeginForm("SearchResources", "Search", FormMethod.Get, new {@class="form-inline"}))
                        {
                            <div class="form-group">
                                <label class="filter-col" style="margin-right: 0;" for="pref-perpage">Ресурсів на сторінку</label>
                                <select id="pref-perpage" class="form-control">
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option selected="selected" value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="40">40</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                    <option value="200">200</option>
                                    <option value="300">300</option>
                                    <option value="400">400</option>
                                    <option value="500">500</option>
                                    <option value="1000">1000</option>
                                </select>
                            </div>
                            <!-- form group [rows] -->
                            <div class="form-group">
                                <label class="filter-col" style="margin-right: 0;" for="pref-search">Ключові слова:</label>
                                 <input type="text" class="form-control input-sm col-xs-4" id="select-with-type" name="Tags">
                            </div>
                            <!-- form group [search] -->
                            <div class="form-group">
                                <label class="filter-col" style="margin-right: 0;" for="pref-orderby">Впорядкувати за:</label>
                                <select id="pref-orderby" class="form-control">
                                    <option>Спаданням</option>
                                    <option>Зростанням</option>
                                </select>
                            </div>
                            <!-- form group [order by] -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-default filter-col">
                                    <span class="glyphicon glyphicon-record"></span>Пошук
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#filter-panel">
                <span class="glyphicon glyphicon-cog"></span> Детальний Пошук
            </button>
        </div>
    </div>
